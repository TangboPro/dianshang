<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tangmall.role.dao.read.MySysUserReadMapper">
  <resultMap id="BaseResultMap" type="com.tangmall.role.model.base.SysUser">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="mark" jdbcType="VARCHAR" property="mark" />
    <result column="lastLogin" jdbcType="DATE" property="lastlogin" />
    <result column="loginIp" jdbcType="VARCHAR" property="loginip" />
    <result column="locked" jdbcType="BIT" property="locked" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, username, password, mark, lastLogin, loginIp, locked, create_time
  </sql>

  <select id="findByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from sys_user
    where username = #{username,jdbcType=VARCHAR}
  </select>

</mapper>